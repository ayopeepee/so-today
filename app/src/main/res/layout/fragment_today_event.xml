<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="40dp"
    tools:context=".ui.fragment.TodayEventFragment">


    <TextView
        android:id="@+id/text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Сентябрь, 11"
        android:textSize="24sp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/ubuntu_medium"/>

    <TextView
        android:id="@+id/text_view_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_date"
        app:layout_constraintStart_toEndOf="@+id/text_view_date"
        app:layout_constraintTop_toTopOf="@+id/text_view_date"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        tools:text="Понедельник"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/light_grey"
        android:textSize="20sp"/>
    
    <Button
        android:id="@+id/button_left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintTop_toTopOf="@id/button_right"
        app:layout_constraintBottom_toBottomOf="@id/button_right"
        app:layout_constraintEnd_toStartOf="@id/button_right"
        />

    <Button
        android:id="@+id/button_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/text_view_date"
        app:layout_constraintBottom_toBottomOf="@id/text_view_date"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.michalsvec.singlerowcalendar.calendar.SingleRowCalendar
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_date"
        app:deselection="false"
        app:longPress="false"
        app:multiSelection="false"
        android:layout_marginTop="16dp"/>



    <TextView
        android:id="@+id/event_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/ubuntu_bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        android:layout_marginTop="16dp"
        tools:text="Что-то" />


</androidx.constraintlayout.widget.ConstraintLayout>